<%
  last  ||= nil
  delay ||= '0.2s'
%>

<div
  id="case-study-<%= project.slug %>"
  class="b-featured-work <% if last %>ie-omega<% end %>"
  style="background-image: url('<%= case_study_bg_path(project) %>')">
  <a href="<%= project.url %>">
    <div
      class="media-16x9 overlay__wrap will-animate flipInX"
      data-wow-delay="<%= delay %>"
      data-wow-offset="50">
      <div class="overlay__centered">
        <div class="overlay__content">

          <div class="s-home-projects__logo">
            <%= case_study_logo({}, project) %>
          </div>

          <small><em>Learn More</em></small>

        </div>
      </div>
    </div>
  </a>
</div>
