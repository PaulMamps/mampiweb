---
title: "Web Design & Development Studio - Chicago"
cover_header: true
---

<%# Welcome %>
<section class="s-home-welcome" id="welcome">
  <div class="l-constrained-large">
    <div class="s-home-welcome__logo will-animate fadeIn">
      <img
        src="<%= image_path "full-logo.svg" %>"
        onerror="this.src='<%= image_path "full-logo.png" %>'"
        alt="<%= data.site.title %>"
        class="image-fullwidth">
    </div>
    <header class="will-animate fadeIn">
      <h2><%= site_description %></h2>
    </header>
    <div class="s-home-welcome__cta">
      <%= component "cta-button", btn: "btn-bright", id: "cta-welcome" %>
    </div>
  </div>
</section>

<%# Featured Work %>
<section class="s-home-projects" id="recent-work">
  <div class="b-section">
    <header>
      <h1 class="section-title">Featured Work</h1>
    </header>
    <div class="s-home-projects__items">
      <% case_study_titles = [
          "Justice Film Fest 2014",
          "LandID",
          "The 5 Love LanguagesÂ®"
      ] %>
      <% case_study_titles.each_with_index do |title, index| %>

        <% case_study = find_case_study_by_title(title) %>

        <% content = capture do %>
          <a href="<% case_study.url %>">
            <%= case_study_logo({ class: "image-fullwidth" }, case_study) %>
          </a>
        <% end %>

        <% styles = case_study.data.color ?
                      "background-color:#{case_study.data.color}" : "" %>

        <%= macro_basic_card(
              el: "article",
              theme: "theme--fixed",
              link: case_study.url,
              link_themes: "theme--overlay",
              link_styles: styles,
              image: page_image(case_study),
        ) { content } %>

      <% end %>
    </div>
    <a href="<%= data.urls.work %>" class="b-pagination-btn">
      View All Work &rarr;
    </a>
  </div>
</section>

<%# Services %>
<section class="s-services" id="services">
  <div class="b-section">

    <header>
      <h1 class="section-title">Services</h1>
    </header>

    <div class="s-services__lists">

      <article
        class="b-service-list will-animate flipInX"
        data-wow-duration="0.8s"
        data-wow-delay="0.2s"
        data-wow-offset="50">
        <header>
          <div class="image-icon">
            <img
              src="<%= image_path 'icons/design.svg' %>"
              onerror="this.src='<%= image_path 'icons/design.png' %>'"
              class="image-fullwidth"
              alt="Design Services Icon">
          </div>
          <h2>Design</h2>
        </header>
        <ul>
          <li>Web &amp; Mobile Design</li>
          <li>User Experience</li>
          <li>User Interface Design</li>
          <li>Information Architecture</li>
          <li>Product Design &amp; Branding</li>
        </ul>
      </article>

      <article class="b-service-list will-animate flipInX" data-wow-duration="0.8s" data-wow-delay="0.4s">
        <header>
          <div class="image-icon">
            <img
              src="<%= image_path 'icons/development.svg' %>"
              onerror="this.src='<%= image_path 'icons/development.png' %>'"
              class="image-fullwidth"
              alt="Development Services Icon">
          </div>
          <h2>Development</h2>
        </header>
        <ul>
          <li>Websites</li>
          <li>Web Applications</li>
          <li>Content Management</li>
          <li>E-commerce Systems</li>
        </ul>
      </article>

      <article class="b-service-list ie-omega will-animate flipInX" data-wow-duration="0.8s" data-wow-delay="0.6s">
        <header>
          <div class="image-icon">
            <img
              src="<%= image_path 'icons/consulting.svg' %>"
              onerror="this.src='<%= image_path 'icons/consulting.png' %>'"
              class="image-fullwidth"
              alt="Consulting Services Icon">
          </div>
          <h2>Consulting</h2>
        </header>
        <ul>
          <li>Email Campaigns</li>
          <li>Content Strategy</li>
          <li>SEO/SEM</li>
          <li>Social Media Integration</li>
          <li>Concept Development</li>
        </ul>
      </article>

    </div>
  </div>
</section>

<%# Team %>
<section class="s-team" id="team">
  <div class="b-section wrap">
    <header>
      <h1 class="section-title">Team</h1>
    </header>
    <div class="l-constrained-medium">
      <div class="s-team__photos">
        <% [ find_team_member_by_name("Michael LaCroix"),
             find_team_member_by_name("James LaCroix") ].each_with_index do |member, index| %>
          <article id="<%= member.slug %>" class="will-animate <%= index == 0 ? 'fadeInLeft' : 'fadeInRight' %>" data-wow-duration="0.7s" data-wow-delay="0.2s">
            <a href="/team/<%= member.slug %>">
              <img src="<%= team_member_avatar_path(member) %>"
                   alt="<%= member.name %>"
                   class="image-circle pulse-grey-to-pink">
              <div class="overlay"><h2><%= member.name %></h2></div>
            </a>
          </article>
        <% end %>
      </div>
      <div class="s-team__stars will-animate fadeInUp" data-wow-duration="0.7s" data-wow-delay="0.2s">
        <img src="<%= image_path "chicago-stars.png" %>" alt="Chicago" class="image-fullwidth">
      </div>
      <h2 class="s-team__based">Proudly Based in Chicago</h2>
      <div class="s-team__about">
        <p>Operating out of the Wicker Park neighborhood and serving clients globally, we are a small team of two brothers who are passionate about helping our partners grow their business. We strategically create engaging user experiences &amp; functional products through a collaborative process with businesses large and small. We look forward to working with you on your next project.</p>
      </div>
      <div class="s-team__btn">
        <%= component "cta-button", id: "cta-team" %>
      </div>
    </div>
  </div>
</section>
